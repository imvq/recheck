{
  "name": "api",
  "version": "1.0.0",
  "description": "reCheck backend",
  "private": "true",
  "scripts": {
    "ecosystem:generate": "node pm2ecosystem.generate.js",
    "migration:create": "db-migrate create",
    "migration:run:up": "env-cmd -f .env.production db-migrate up",
    "migration:run:down": "env-cmd -f .env.production db-migrate down",
    "prepare-media-dir": "cp -R ./media ./dist",
    "prepare-templates-dir": "mkdir ./dist/business -p && cp -R src/business/templates dist/business",
    "prepare-sql-dir": "mkdir ./dist/business/database -p && cp -R src/business/database/sql dist/business/database",
    "prepare-dirs": "yarn run prepare-media-dir && yarn run prepare-templates-dir && yarn run prepare-sql-dir",
    "prepare-all": "mkdir ./dist && yarn run prepare-dirs",
    "start": "rm -rf ./dist && yarn run prepare-all && env-cmd -f .env.development ts-node src/dev-watch",
    "build": "rm -rf ./dist && yarn run prepare-all && yarn run ecosystem:generate && env-cmd -f .env.production tsc"
  },
  "_moduleAliases": {
    "@application": "dist/application",
    "@business": "dist/business",
    "@controllers": "dist/controllers",
    "@typing": "dist/typing"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "http-status": "^1.5.0",
    "module-alias": "^2.2.2",
    "node-abort-controller": "^2.0.0",
    "nodemailer": "^6.5.0",
    "nodemailer-mailgun-transport": "^2.1.3",
    "pg": "^8.5.1",
    "pg-promise": "^10.11.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/handlebars": "^4.1.0",
    "@types/morgan": "^1.9.2",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-mailgun-transport": "^1.4.2",
    "@types/tsc-watch": "^4.2.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "chalk": "^4.1.0",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^10.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "3.7.5"
  }
}
